{{>layout/header}}
<h1>게시글 수정</h1>

<div class="col-md-12">
  <div class="col-md-4">
    <form>
      <div class="form-group">
        <label for="id">제목</label>
        <input type="text" class="form-control" id="id" readonly value="{{post.id}}">
      </div>
      <div class="form-group">
        <label for="title">제목</label>
        <input type="text" class="form-control" id="title" value="{{post.title}}" placeholder="enter title">
      </div>
      <div class="form-group">
        <label for="author">작성자</label>
        <input type="text" class="form-control" id="author" value="{{post.author}}" placeholder="enter author">
      </div>
      <div class="form-group">
        <label for="content">내용</label>
        <input type="text" class="form-control" id="content" value="{{post.content}}" placeholder="enter content">
      </div>
    </form>
    <a href="/" role="button" class="btn btn-secondary">취소</a>
    <button class="btn btn-primary" id="btn-update">수정완료</button>
  </div>
</div>

{{>layout/footer}}